{
  "private": true,
  "name": "twine-api",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "10.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TwinePlatform/twine-api.git"
  },
  "contributors": [
    "Elias Malik <elias@foundersandcoders.com>",
    "Aisha Nasir <aisha@foundersandcoders.com>"
  ],
  "bugs": {
    "url": "https://github.com/TwinePlatform/twine-api/issues"
  },
  "homepage": "https://github.com/TwinePlatform/twine-api#readme",
  "scripts": {
    "test:unit": "NODE_ENV=testing jest --config=jest.unit.config.js",
    "test:integration": "NODE_ENV=testing jest --config=jest.integration.config.js --runInBand",
    "test": "npm run test:unit && npm run test:integration",
    "cover:unit": "npm run test:unit -- --coverage",
    "cover:integration": "npm run test:integration -- --coverage",
    "cover:merge": "istanbul-merge --out coverage/coverage-final.json coverage/unit/coverage-final.json coverage/integration/coverage-final.json",
    "cover": "npm run cover:unit && npm run cover:integration && npm run cover:merge",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "migrate:latest": "knex migrate:latest",
    "migrate:latest:test": "NODE_ENV=testing knex migrate:latest",
    "migrate:make": "node ./bin/db.js migrate:make",
    "migrate:teardown": "node ./bin/db.js migrate:teardown",
    "migrate:teardown:test": "NODE_ENV=testing node ./bin/db.js migrate:teardown",
    "migrate:reset": "npm run migrate:teardown && npm run migrate:latest && npm run seed:run",
    "migrate:reset:test": "npm run migrate:teardown:test && npm run migrate:latest:test && npm run seed:run:test",
    "seed:make": "knex seed:make",
    "seed:run": "knex seed:run",
    "seed:run:test": "NODE_ENV=testing knex seed:run",
    "dev": "nodemon ./build/src/index.js",
    "start": "node ./build/src/index.js",
    "watch": "tsc -w",
    "build": "tsc",
    "heroku-postbuild": "npm run build && npm run migrate:latest"
  },
  "dependencies": {
    "@types/hapi": "^17.0.12",
    "@types/jest": "^23.1.1",
    "@types/knex": "^0.14.15",
    "@types/ramda": "^0.25.34",
    "dotenv": "^6.0.0",
    "hapi": "^17.5.1",
    "hapi-pino": "^4.0.4",
    "joi": "^13.4.0",
    "knex": "^0.14.6",
    "minimist": "^1.2.0",
    "pg": "^7.4.3",
    "postmark": "^1.6.1",
    "ramda": "^0.25.0",
    "typescript": "^2.9.1"
  },
  "devDependencies": {
    "tslint-config-twine": "github:TwinePlatform/tslint-config-twine#2.1.0",
    "istanbul-merge": "^1.1.1",
    "jest": "^23.3.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6"
  }
}
