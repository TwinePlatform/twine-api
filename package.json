{
  "private": true,
  "name": "twine-api",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "10.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TwinePlatform/twine-api.git"
  },
  "contributors": [
    "Elias Malik <elias@foundersandcoders.com>",
    "Aisha Nasir <aisha@foundersandcoders.com>"
  ],
  "bugs": {
    "url": "https://github.com/TwinePlatform/twine-api/issues"
  },
  "homepage": "https://github.com/TwinePlatform/twine-api#readme",
  "scripts": {
    "test:unit": "NODE_ENV=testing jest --config=jest.unit.config.js",
    "test:integration": "NODE_ENV=testing jest --config=jest.integration.config.js --runInBand",
    "test": "npm run test:unit && npm run test:integration",
    "cover:unit": "npm run test:unit -- --coverage",
    "cover:integration": "npm run test:integration -- --coverage",
    "cover": "npm run cover:unit && npm run cover:integration",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "migrate:latest": "knex migrate:latest",
    "migrate:latest:prod": "NODE_ENV=production knex migrate:latest",
    "migrate:latest:test": "NODE_ENV=testing knex migrate:latest",
    "migrate:make": "node ./bin/db.js migrate:make",
    "migrate:teardown": "node ./bin/db.js migrate:teardown",
    "migrate:teardown:prod": "NODE_ENV=production node ./bin/db.js migrate:teardown",
    "migrate:teardown:test": "NODE_ENV=testing node ./bin/db.js migrate:teardown",
    "db:reset": "npm run migrate:teardown && npm run migrate:latest",
    "db:reset:prod": "npm run migrate:teardown:prod && npm run migrate:latest:prod",
    "db:reset:test": "npm run migrate:teardown:test && npm run migrate:latest:test",
    "seed:make": "knex seed:make",
    "seed:run": "knex seed:run",
    "seed:run:test": "NODE_ENV=testing knex seed:run",
    "dev": "nodemon",
    "copy:assets": "cp -R ./assets ./build/assets",
    "copy:fonts": "cp -R ./src/services/pdf/fonts ./build/src/services/pdf/fonts",
    "copy": "npm run copy:assets && npm run copy:fonts",
    "start": "node ./build/src/index.js",
    "watch": "tsc -w",
    "build": "tsc && npm run copy",
    "heroku-postbuild": "npm run build && npm run migrate:latest"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie": "^0.3.2",
    "@types/hapi": "^17.6.3",
    "@types/hapi-auth-jwt2": "^8.0.2",
    "@types/jest": "^23.3.9",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.0",
    "@types/pdfmake": "^0.1.2",
    "@types/ramda": "^0.25.41",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "boom": "^7.2.2",
    "chalk": "^2.4.1",
    "cookie": "^0.3.1",
    "dotenv": "^6.1.0",
    "hapi": "^17.7.0",
    "hapi-auth-bearer-token": "^6.1.0",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-pino": "^5.1.0",
    "hapi-qs": "^2.0.1",
    "joi": "^14.0.4",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.15.2",
    "minimist": "^1.2.0",
    "moment": "^2.22.2",
    "pdfmake": "^0.1.39",
    "pg": "^7.6.1",
    "postmark": "^2.2.0",
    "qrcode": "^1.3.2",
    "ramda": "^0.25.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@types/mockdate": "^2.0.0",
    "axios-mock-adapter": "^1.15.0",
    "factory-girl": "^5.0.3",
    "jest": "^23.6.0",
    "mockdate": "^2.0.2",
    "nodemon": "^1.18.7",
    "ts-jest": "^23.10.4",
    "tslint-config-twine": "github:TwinePlatform/tslint-config-twine#2.1.0"
  }
}
