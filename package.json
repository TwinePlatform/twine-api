{
  "private": true,
  "name": "twine-api",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TwinePlatform/twine-api.git"
  },
  "contributors": [
    "Elias Malik <elias@foundersandcoders.com>",
    "Aisha Nasir <aisha@foundersandcoders.com>"
  ],
  "bugs": {
    "url": "https://github.com/TwinePlatform/twine-api/issues"
  },
  "homepage": "https://github.com/TwinePlatform/twine-api#readme",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:parallel && npm run test:series",
    "test:parallel": "NODE_ENV=testing jest '.test.ts$'",
    "test:series": "NODE_ENV=testing jest '.test.series.ts$' --runInBand",
    "test:watch": "NODE_ENV=testing jest --watch",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --project tsconfig.json --fix",
    "migrate:latest": "knex migrate:latest",
    "migrate:latest:test": "NODE_ENV=testing knex migrate:latest",
    "migrate:make": "node ./bin/db.js migrate:make",
    "migrate:teardown": "node ./bin/db.js migrate:teardown",
    "migrate:teardown:test": "NODE_ENV=testing node ./bin/db.js migrate:teardown",
    "seed:make": "knex seed:make",
    "seed:run": "knex seed:run",
    "seed:run:test": "NODE_ENV=testing knex seed:run",
    "db:reset": "npm run migrate:teardown && npm run migrate:latest && npm run seed:run",
    "db:reset:test": "npm run migrate:teardown:test && npm run migrate:latest:test && npm run seed:run:test",
    "cover": "jest --runInBand --coverage",
    "dev": "nodemon ./build/src/index.js",
    "start": "node ./build/src/index.js",
    "watch": "tsc -w",
    "build": "tsc"
  },
  "jest": {
    "verbose": true,
    "coverageDirectory": "./coverage",
    "testPathIgnorePatterns": [
      "<rootDir>/build/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "__tests__/.*",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "hapi": "^17.5.1",
    "hapi-pino": "^4.0.4",
    "joi": "^13.4.0",
    "knex": "^0.14.6",
    "minimist": "^1.2.0",
    "pg": "^7.4.3",
    "postmark": "^1.6.1",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@types/hapi": "^17.0.12",
    "@types/jest": "^23.1.1",
    "@types/knex": "^0.14.15",
    "@types/ramda": "^0.25.34",
    "eslint-config-twine": "github:TwinePlatform/eslint-config-twine",
    "jest": "^23.3.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.1"
  }
}
