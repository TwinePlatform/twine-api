{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "sourceMap": true,
    "lib": [
      "es2017"
    ],
  },
  "exclude": [
    "bin",
    "database",
    "docs",
    "node_modules"
  ]
}
